<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <left>
      <VBox spacing="15.0" BorderPane.alignment="CENTER">
         <children>
            <Label id="taskNameLabel" text="Task Name: " />
            <Label id="taskNameLabel" text="Description: " />
            <Label id="sizeLabel" text="Size: " />
            <Label id="deadLineLabel" text="Deadline:" />
            <Label id="statsLabel" text="Stats:" />
            <Label id="ElapsedTimeLabel" text="Elapsed Time:" />
            <Label id="categoryLabel" text="Category:" />
         </children>
         <BorderPane.margin>
            <Insets left="10.0" right="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets top="10.0" />
         </padding>
      </VBox>
   </left>
   <bottom>
      <HBox alignment="TOP_RIGHT" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button id="cancelButton" mnemonicParsing="false" onAction="#cancelButton" text="Cancel" />
            <Button id="saveButton" mnemonicParsing="false" onAction="#saveButton" text="Save" />
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <VBox spacing="7.0" BorderPane.alignment="TOP_LEFT">
         <children>
            <TextField id="taskNameTField" />
            <TextField id="descTField" />
            <TextField id="sizeTField" />
            <TextField id="deadlineTField" />
            <TextField id="statsTField" />
            <TextField id="elapsedTimeTField" />
            <TextField id="categoryTField" />
         </children>
         <padding>
            <Insets right="10.0" top="12.0" />
         </padding>
      </VBox>
   </center>
</BorderPane>
